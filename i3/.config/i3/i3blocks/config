separator_block_width=20
markup=pango
interval=5

#-----------------------------------------------------------
# CPU
#-----------------------------------------------------------
[CPU]
label=ï‹›
command=awk -v cpu="$(grep 'cpu ' /proc/stat)" 'BEGIN{split(cpu,a);while(getline < "/proc/stat"){split($0,b);if(b[1]=="cpu"){printf("%.1f%%",100*(1-(b[4]-a[4])/(b[1]+b[2]+b[3]+b[4]-a[1]-a[2]-a[3]-a[4]))));exit}}}'
interval=3
color=#50fa7b

#-----------------------------------------------------------
# Memory
#-----------------------------------------------------------
[Memory]
label=ï”¸
command=free -h | awk '/Mem/{print $3 "/" $2}'
interval=10
color=#8be9fd

#-----------------------------------------------------------
# Disk
#-----------------------------------------------------------
[Disk]
label=ï‚ 
command=df -h / | awk 'NR==2{print $3 "/" $2}'
interval=30
color=#f1fa8c

#-----------------------------------------------------------
# Volume
#-----------------------------------------------------------
[Volume]
label=ï€¨
command=amixer get Master | grep -Po "[0-9]+(?=%)" | head -1 | awk '{print $1 "%"}'
interval=2
color=#ffb86c

#-----------------------------------------------------------
# Battery
#-----------------------------------------------------------
[Battery]
label=ðŸ”‹
command=acpi -b | awk '{print $4}' | tr -d ','
interval=30
color=#bd93f9

#-----------------------------------------------------------
# Network
#-----------------------------------------------------------
[Network]
label=ï‡«
command=nmcli -t -f ACTIVE,SSID dev wifi | grep '^yes' | cut -d: -f2
interval=10
color=#50fa7b

#-----------------------------------------------------------
# Date & Time
#-----------------------------------------------------------
[Time]
label=ï€—
command=date '+%a %d %b %H:%M'
interval=60
color=#ff79c6
